.index {
  width: 100%;
  height: 100%;
  position: relative;
}
.index camera {
  width: 100%;
  height: 100%;
  opacity: 0.1;
}
.index .shot {
  width: 110rpx;
  height: 110rpx;
  position: absolute;
  left: calc(50% - 55rpx);
  bottom: 30rpx;
  border-radius: 50%;
  border: 1px solid white;
  padding: 16rpx;
  box-sizing: border-box;
}
.index .shot .circle {
  width: 100%;
  height: 100%;
  background-color: white;
  border-radius: 50%;
}
.index .flash {
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  left: 100rpx;
  bottom: 50rpx;
}
.index .transform {
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  right: 100rpx;
  bottom: 50rpx;
}

